{
    "SchemaDefinition": "RedfishInteroperabilityProfile.v1_0_0",
    "ProfileName": "OpenstackSushy",
    "ProfileVersion": "1.0.0",
    "Purpose": "Specifies the OpenStack sushy Redfish client requirements of a Redfish service implementation, typically offered by a baseboard management controller (BMC).",
    "OwningEntity": "Dell Inc.",
    "ContactInfo": ["dhuldev.valekar@dellteam.com", "digmabar.patil@dellteam.com", "richard.pioso@dell.com"],
    "Protocol": {
        "MinVersion": "1.0",
        "Discovery": "Recommended",
        "HostInterface": "Recommended"
    },
    "Resources": {
        "ComputerSystemCollection": {
            "PropertyRequirements": {
                "Members": {
                    "MinCount": 1
                }
            }
        },
        "ComputerSystem": {
            "MinVersion": "1.0.0",
            "Purpose": "Every implementation must have the logical view of the System.",
            "PropertyRequirements": {
                "AssetTag": {
                    "ReadRequirement": "Recommended"
                },
                "BiosVersion": {
                    "ReadRequirement": "Recommended"
                },
                "Boot": {
                    "ReadRequirement": "Mandatory",
                    "PropertyRequirements": {
                        "BootSourceOverrideEnabled": {
                            "Comparison": "AnyOf",
                            "Values": ["Once","Continuous","Disabled"]
                        },
                        "BootSourceOverrideMode": {
                            "Comparison": "AnyOf",
                            "Values": ["UEFI","Legacy"]
                        },
                        "BootSourceOverrideTarget": {
                            "Comparison": "AnyOf",
                            "Values": [
                                "None", "Pxe", "Floppy", "Cd",
                                "Hdd", "BiosSetup", "Utilities",
                                "UefiTarget", "SDCard", "UefiHttp"
                            ]
                        }
                    }
                },
                "Description": {
                    "ReadRequirement": "Recommended"
                },
                "HostName": {
                    "ReadRequirement": "Recommended"
                },
                "IndicatorLED": {
                    "ReadRequirement": "Recommended",
                    "WriteRequirement": "Mandatory",
                    "Comparison": "AnyOf",
                    "Values": ["Lit", "Blinking", "Off", "Unknown"]
                },
                "Links": {
                    "PropertyRequirements": {
                        "ManagedBy": {
                            "Members": {
                                "MinCount": 1
                                }
                        }
                    }
                },
                "Manufacturer": {
                    "ReadRequirement": "Recommended"
                },
                "MemorySummary": {
                    "ReadRequirement": "Recommended",
                    "PropertyRequirements":{
                        "Status": {
                            "ReadRequirement": "IfImplemented"
                        },
                        "TotalSystemMemoryGiB": {
                            "ReadRequirement": "IfImplemented"
                        },
                        "HealthRollup": {
                            "ReadRequirement": "IfImplemented"
                        }
                    }
                },
                "Model": {
                    "ReadRequirement": "Recommended"
                },
                "Oem": {
                    "ReadRequirement": "Recommended"
                },
                "PowerState": {
                    "ReadRequirement": "Recommended",
                    "Comparison": "AnyOf",
                    "Values": ["On","Off","PoweringOn","PoweringOff"]
                },
                "SerialNumber": {
                    "ReadRequirement": "Recommended"
                },
                "SKU": {
                    "ReadRequirement": "Recommended"
                },
                "SystemType": {
                    "ReadRequirement": "Recommended",
                    "Comparison": "AnyOf",
                    "Values": [
                        "Physical", "Virtual", "OS",
                        "PhysicallyPartitioned",
                        "VirtuallyPartitioned", "Composed"
                    ]
                },
                "UUID": {
                    "ReadRequirement":"Recommended"
                }
            },
            "ActionRequirements": {
                "Reset": {
                    "ReadRequirement": "Mandatory",
                    "Purpose": "Ability to reset the system is a core requirement of most users.",
                    "Parameters": {
                        "ResetType": {
                            "ParameterValues": [
                                "On", "ForceOff", "ForceRestart",
                                "GracefulShutdown", "PushPowerButton",
                                "Nmi", "PowerCycle"
                            ]
                        }
                    }
                }
            }
        }
    }
}
